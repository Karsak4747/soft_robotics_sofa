#!/bin/bash

export DISPLAY=:1

# Запуск виртуального X-сервера
Xvfb :1 -screen 0 1280x720x24 &

# Старт простого оконного менеджера
fluxbox &

# Запуск x11vnc
x11vnc -display :1 -nopw -forever -shared &

# Запуск noVNC (на порту 6080)
cd /opt/novnc
./utils/novnc_proxy --vnc localhost:5900 --listen 6080